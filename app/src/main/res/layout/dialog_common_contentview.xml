<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <com.zjy.north.rukuapp.mview.ScrollViewHasMaxHeight
        android:id="@+id/dialog_cm_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_cm_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center|top"
            android:textSize="@dimen/def_text_size" />
    </com.zjy.north.rukuapp.mview.ScrollViewHasMaxHeight>
 <!--   <TextView
        android:id="@+id/dialog_cm_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center|top"
        android:textSize="@dimen/def_text_size" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:id="@+id/dialog_cm_btns">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/dialog_cm_btn_left"
                style="@style/dialog_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="确定"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dialog_cm_divider2"
                android:layout_width="1dp"
                android:layout_margin="2dp"
                android:background="@color/dialog_divider"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/dialog_cm_btn_right"
                android:layout_weight="1"
                style="@style/dialog_button"
                android:layout_width="0dp"
                android:text="取消"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>