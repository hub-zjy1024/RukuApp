<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/ItemViewPadding"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/def_text_size"
            android:text="旧批号:"></TextView>
        <TextView
            android:id="@+id/dialog_kucun_tv_oldpartno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/def_text_size"
            android:text="pid"></TextView>

    </LinearLayout>
    <EditText
        android:id="@+id/dialog_kucun_ed_partno"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="请输入新批号"></EditText>

    <Button
        android:id="@+id/dialog_kucun_btn_update"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_button.light"
        android:text="更新"></Button>
</LinearLayout>