<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_view_padding_horizontal"
        android:layout_marginRight="@dimen/item_view_padding_horizontal"
        android:layout_marginTop="@dimen/item_view_padding_vetical"
        android:layout_marginBottom="@dimen/item_view_padding_vetical"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/dialog_rk_chaidan_btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dialog_button.light"
                android:text="新增+"
                android:layout_gravity="center_vertical"

                ></Button>
            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/dialog_rk_chaidan_btn_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/dialog_button.light"
                android:text="确认"
                android:layout_gravity="center_vertical"
                ></Button>
        </LinearLayout>
        <TextView
            android:id="@+id/dialog_rk_chaidan_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <com.b1b.js.erpandroid_kf.myview.MaxHeightListView
            android:layout_width="match_parent"
            android:id="@+id/dialog_rk_chaidan_lv"
            app:mh_height="200dp"
            app:mhLv_height="200dp"
            android:layout_height="wrap_content" />
<!--        <ListView-->
<!--            android:id="@+id/dialog_rk_chaidan_lv"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"/>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_rk_chaidan_rv"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="200dp"/>
    </LinearLayout>
</LinearLayout>