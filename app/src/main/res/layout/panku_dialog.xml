<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <TextView
        android:id="@+id/panku_dialog_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:text="这是明细id"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘型号"/>

        <EditText
            android:id="@+id/panku_dialog_partno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘数量"/>

        <EditText
            android:id="@+id/panku_dialog_counts"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘厂家"/>

        <EditText
            android:id="@+id/panku_dialog_factory"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘描述"/>

        <EditText
            android:id="@+id/panku_dialog_description"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘封装"/>

        <EditText
            android:id="@+id/panku_dialog_fengzhuang"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘批号"/>

        <EditText
            android:id="@+id/panku_dialog_pihao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实盘位置"/>

        <EditText
            android:id="@+id/panku_dialog_place"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <Button
            android:id="@+id/panku_dialog_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="最小包装"/>

        <EditText
            android:id="@+id/panku_dialog_minbz"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘库备注"/>

        <EditText
            android:id="@+id/panku_dialog_mark"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <Button
            android:id="@+id/panku_dialog_panku"
            style="@style/zjy_button_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="盘库"/>

        <Button
            android:id="@+id/panku_dialog_reset"
            style="@style/zjy_button_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="解锁"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <Button
            android:id="@+id/panku_dialog_takepic"
            style="@style/zjy_button_light"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="拍照"/>

        <Button
            android:id="@+id/panku_dialog_cancel"
            style="@style/zjy_button_light"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="取消"/>

    </LinearLayout>

</LinearLayout>