<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_normal_toobar"/>
    <!--<TextView-->
        <!--android:id="@+id/title"-->
        <!--style="@style/zjy_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/activity_title_height"-->
        <!--android:text="关于"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/appicon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="当前版本号:"-->
                <!--android:textSize="18sp"/>-->

            <TextView
                android:id="@+id/activity_about_tv_version"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_def_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新版本号:"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/activity_about_tv_newversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_def_margin">

            <Button
                android:id="@+id/activity_about_btn_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="检查更新"/>

            <Button
                android:id="@+id/activity_about_btn_downloadnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载最新版本"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_about_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/activity_about_tv_devid"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/activity_about_btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传日志"/>

        <ImageView
            android:layout_marginTop="@dimen/view_def_margin"
            android:id="@+id/iv_about_update_qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/download_apk2"/>
    </LinearLayout>


</LinearLayout>
